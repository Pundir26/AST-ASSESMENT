pipeline {
    agent any 

    stages {
        stage('CLONE') {
            steps {
                git branch: 'main', url: 'https://github.com/Pundir26/AST-ASSESMENT.git'
            } 
        }
        stage('CLEAN') {
            steps {
                sh 'mvn clean' 
                sh 'mvn compile'
            }
        } 
        stage('BUILD') {
            steps {
                sh 'mvn package'
            } 
            post {
                success {
                    echo "ArchiveArtifacts" 
                    archiveArtifacts artifacts: 'target/app.war', followSymlinks: false 

                }

            }
        } 
        stage('DEPLOY') {
            steps {
                withCredentials([file(credentialsId: 'DEPLOY', variable: '')]) {
                    scp target/app.war ubuntu@18.138.79.134:/home/ubuntu/apache-tomcat-9.0.85/webapps

                }
            }  
        }   
    } 
}
